<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns="http://jboss.org/schema/arquillian"
   xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

   <container qualifier="container-se" default="true">
      <protocol type="simple-jmx" />
      <configuration>
         <property name="debug">${debug:false}</property>
         <property name="waitTime">${waitTime:10}</property>
         <property name="keepDeploymentArchives">false</property>
      </configuration>
   </container>

</arquillian>